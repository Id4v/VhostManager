{% extends "base.html.twig" %}

{% block content %}
    <div class="container">
        <div class="row">
            <h2>Editer {{ vhost.name }}</h2>
        </div>
        <div class="row">
            <form class="form-horizontal" action="" method="post">
                <div class="form-group">
                    <label for="name">
                        Nom
                    </label>
                    <input type="text" class="form-control" name="vhost[name]" value="{{ vhost.name }}"/>
                </div>
                <div class="form-group">
                    <label for="url">
                        Url
                    </label>
                    <input type="text" class="form-control" value="{{ vhost.url }}" name="vhost[url]"/>
                </div>
                <div class="form-group">
                    <label for="path">
                        DocumentRoot
                    </label>
                    <input type="text" class="form-control" value="{{ vhost.path }}" name="vhost[path]"/>
                </div>
                <div class="form-group">
                    <button class="btn btn-info">Valider</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}